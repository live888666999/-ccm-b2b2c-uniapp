/* 商品列表 */
.goods-list {
  position: absolute;
  top: 200px;
  left: 0;
  right: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 0 30rpx;
  background: -webkit-linear-gradient(top, #ffffff 0%, #f8f8f8 100%);
  background: linear-gradient(to bottom, #ffffff 0%, #f8f8f8 100%);
  border-radius: 20rpx;
}
.goods-list .header {
    width: 100%;
    text-align: center;
    padding: 20rpx 0;
    font-size: 32rpx;
    font-color: #303133;
}
.goods-list .header image {
      vertical-align: middle;
      height: 60rpx;
      width: 60rpx;
}
.goods-list .header text {
      padding-left: 10rpx;
}
.goods-list .goods-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    width: 100%;
    padding: 20rpx;
    background-color: #fff;
    margin: 10rpx 0;
    border-radius: 20rpx;
}
.goods-list .image-wrapper {
    width: 100%;
    height: 330rpx;
    border-radius: 3px;
    overflow: hidden;
}
.goods-list .image-wrapper image {
      width: 100%;
      height: 100%;
      opacity: 1;
}
.goods-list .title {
    font-size: 28rpx;
    color: #303133;
    line-height: 80rpx;
}
.goods-list .price-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 10rpx 10rpx 10rpx 0;
    font-size: 24rpx;
    color: #909399;
}
.goods-list .price {
    font-size: 32rpx;
    color: #fa436a;
    line-height: 1;
}
.goods-list .price:before {
      content: '\FFE5';
      font-size: 26rpx;
}

